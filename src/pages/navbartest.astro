---
import MainLayout from '../layouts/MainLayout.astro';
---

<MainLayout>
    <div
        class="flex flex-col md:flex-row items-start max-w-6xl mx-auto p-0 gap-5 mt-30"
    >
        <!-- Left content: Title and Paragraph -->
        <div class="md:w-2/3 text-left">
            <h2 class="text-3xl font-bold mb-4">Your Awesome Title</h2>
            <p class="text-gray-700 text-lg">
                This is a descriptive paragraph that explains something
                important or interesting. It provides enough detail to keep the
                reader engaged and informed.
            </p>
        </div>

        <!-- Right content: Image -->
        <div class="md:w-1/3">
            <img
                src="/images/responsabilite-fuite-eau-logement-image.jpg.webp"
                alt="Descriptive alt text"
                class="w-full h-auto rounded-xl shadow-md"
            />
        </div>
    </div>
</MainLayout>

---
import ServiceCard from '../components/ServiceCard.astro';
import Mainlayout from '../layouts/MainLayout.astro';
---

<Mainlayout>
	<div>
		<h1 class="text-4xl font-bold text-red-600">Plombier Annemasse</h1>
		<h2 class="text-2xl text-blue-500">
			Votre artisan Plombier chauffagiste en Haute-Savoie
		</h2>
		<h2 class="text-2xl text-blue-300">
			Intervention 24/24h 7/7 sans Rendez Vous.
		</h2>
		<div>
			<ul class="list-disc list-inside space-y-2">
				<li>AGRÉE ASSURANCES</li>
				<li>DEVIS GRATUIT</li>
				<li>QUALITÉ / PRIX GARANTIE</li>
				<li>PERSONNEL QUALIFIÉ</li>
			</ul>
		</div>
	</div>
	<ServiceCard />
	<div class="w-full max-w-4xl bg-white shadow-md rounded-lg p-6 mx-auto">
		<!-- Title -->
		<h2 class="text-xl font-bold text-blue-700 text-center mb-4">
			BESOIN D’AIDE ? DEMANDER À ÊTRE RAPPELÉ
		</h2>

		<!-- Form -->
		<form class="grid grid-cols-1 sm:grid-cols-2 gap-4">
			<!-- Name -->
			<input
				type="text"
				placeholder="Nom et prénom"
				class="w-full p-3 border rounded-lg focus:ring-2 focus:ring-blue-500"
			/>

			<!-- Email -->
			<input
				type="email"
				placeholder="Email"
				class="w-full p-3 border rounded-lg focus:ring-2 focus:ring-blue-500"
			/>

			<!-- Phone -->
			<input
				type="tel"
				placeholder="Téléphone"
				class="w-full p-3 border rounded-lg focus:ring-2 focus:ring-blue-500"
			/>

			<!-- City -->
			<input
				type="text"
				placeholder="Ville"
				class="w-full p-3 border rounded-lg focus:ring-2 focus:ring-blue-500"
			/>

			<!-- Submit Button -->
			<div class="col-span-1 sm:col-span-2 flex justify-center">
				<button
					type="submit"
					class="bg-red-600 text-white font-bold py-3 px-6 rounded-lg hover:bg-red-700 transition"
				>
					ENVOYER
				</button>
			</div>
		</form>
	</div>
</Mainlayout>

---
import { Image } from 'astro:assets';
import footerImg from '../images/footerimg.jpg';
import logo from '../images/logo.png';
---

<footer class="">
    <!-- Contact Section -->
    <div class="bg-blue-400 px-6 py-10 text-center sm:text-left">
        <h2 class="text-3xl font-bold italic text-white mb-6">
            Contactez nous
        </h2>

        <div
            class="flex flex-col sm:flex-row sm:items-center sm:justify-between gap-6 text-lg"
        >
            <div
                class="flex flex-wrap justify-center sm:justify-start gap-6 text-white/90"
            >
                <div class="flex items-center gap-2">
                    <span>📞</span>
                    <span
                        class="text-white-400 font-semibold tracking-wide underline underline-offset-4"
                        >04 58 10 51 99</span
                    >
                </div>
                <div class="flex items-center gap-2">
                    <span>📍</span>
                    <span>Haute Savoie</span>
                </div>
                <div class="flex items-center gap-2">
                    <span>🕒</span>
                    <span>Lundi au dimanche, 24H/24</span>
                </div>
            </div>

            <!-- Call request button -->
            <button
                class="bg-green-400 hover:bg-red-500 text-black font-semibold px-6 py-3 rounded-md shadow-md transition-all duration-300 flex items-center justify-center gap-2"
            >
                📞 Demande de rappel
            </button>
        </div>
    </div>

    <!-- Footer Bottom -->
    <div class="px-6 py-8 text-center sm:text-left">
        <div class="flex flex-col sm:flex-row items-center gap-4">
            <!-- Logo -->
            <div class="flex items-center gap-2">
                <Image src={logo} alt="Chrono Serrure Logo" class="h-10" />
                <!-- <span class="text-yellow-400 font-bold text-xl"
                    >CHRONO<br /><span class="text-white">SERRURE</span></span
                > -->
            </div>

            <!-- Description -->
            <p class="text-white/80 mt-2 sm:mt-0 sm:ml-4">
                Services de Serrurerie, Interventions et Dépannage Rapide.
            </p>
        </div>
    </div>
</footer>
